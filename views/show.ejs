<!DOCTYPE html>
<html>
    
    
    <head>
        <title></title>
        <link rel = "stylesheet" href= "/stylesheets/home.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Gamja+Flower|Lobster|Noto+Serif|Shadows+Into+Light" rel="stylesheet">
    </head>
    
    
    <body>
        
        <div class = "categoryHeader">
             <a href = "/categories"><i class="far fa-arrow-alt-circle-left"></i></a>
        
            <span id = "categoryDisplay">
                <h1><%= categories.title %></h1>
            </span>
        </div>
        
        <div class = "todos">
            <ul style= "float:none">
                <% categories.todos.forEach(function(todo){ %>
                    <div class = "mainTodoItem">
                        <li>
                            <%= todo.description %>
                            
                         </li>
                            <form action = "/categories/deleteTodo/<%=categories.id %>/<%=todo._id %>?_method=DELETE" method = "POST" class = "deleteTodo">
                                <input type = "submit" value = "Complete" class = "finishedTodo">
                            </form>
                    </div> 
                 <% }) %>
                   
               
            </ul>
            <form action = "/categories/<%= categories._id %>" method = "POST">
                <input type = "text" name = "description" placeholder = "New Todo">
                <input type = "submit" class= "addTodo">
            </form>
        </div>   
        
        
        <form action = "/categories/<%= categories._id %>?_method=DELETE" method = "POST" >
            <input type = "submit"  value = "Delete Category" class = "deleteCategory">
        </form>
    </body>
    
    
</html>